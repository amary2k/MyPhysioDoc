<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent" android:descendantFocusability="blocksDescendants"
    android:background="@color/material_grey_800">

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/exercisePlayVideoBtn"
        android:src="@android:drawable/ic_menu_slideshow"
        android:background="@android:color/transparent"
        android:layout_gravity="center_vertical|left" />

    <TextView android:id="@+id/exerciseDescription"
        android:paddingLeft="50px"
        android:focusable="false"
        android:textSize="16dp"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:layout_gravity="center"
        android:layout_weight=".80" />

    <TextView
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/exercisePainLvl"
        android:layout_gravity="center_vertical|right"
        android:textColor="#ffffff"
        android:text="5"
        android:textAlignment="center"
        android:textSize="20dp" />

</LinearLayout>